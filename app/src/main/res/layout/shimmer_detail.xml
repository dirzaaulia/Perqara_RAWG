<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/shimmer_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_220"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_publisher"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_12"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toBottomOf="@id/shimmer_image" />

        <View
            android:id="@+id/shimmer_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_28"
            android:layout_marginTop="@dimen/spacing_8"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toBottomOf="@id/shimmer_publisher"/>

        <View
            android:id="@+id/shimmer_release_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_12"
            android:layout_marginTop="@dimen/spacing_4"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toBottomOf="@id/shimmer_name" />

        <View
            android:id="@+id/container_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_20"
            android:layout_marginTop="@dimen/spacing_4"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toBottomOf="@id/shimmer_release_date"/>

        <View
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_24"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintTop_toBottomOf="@id/container_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>